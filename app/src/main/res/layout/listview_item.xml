<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="5dp"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/week_padding"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="00"
        android:id="@+id/no"
        android:textColor="@color/aluminum"
        android:textSize="@dimen/default_text" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="과목명"
            android:id="@+id/subject"
            android:textColor="@color/jet"
            android:textSize="@dimen/default_text_mid" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="과제 내용"
            android:id="@+id/name"
            android:textColor="@color/aluminum"
            android:textSize="@dimen/default_text"
            android:layout_marginTop="@dimen/week_padding"
            android:layout_marginBottom="@dimen/week_padding" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00-00 00:00 ~ 00-00 00:00"
            android:id="@+id/date"
            android:textColor="@color/jumbo"
            android:textSize="@dimen/default_text"
            android:layout_marginBottom="@dimen/default_margin" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="공개여부"
            android:id="@+id/open"
            android:textColor="@color/jet"
            android:textSize="@dimen/default_text" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:id="@+id/score"
            android:textColor="@color/aluminum"
            android:textSize="@dimen/default_text"
            android:layout_marginTop="@dimen/week_padding"
            android:layout_marginBottom="@dimen/week_padding" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제출여부"
            android:id="@+id/handin"
            android:textColor="@color/jet"
            android:textSize="@dimen/default_text" />
    </LinearLayout>
</LinearLayout>
</android.support.v7.widget.CardView>
